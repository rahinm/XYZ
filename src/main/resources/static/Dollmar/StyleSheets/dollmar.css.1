h1 {
	font-family: Verdana;
	font-size: 40pt;
	color: #000099;
	font-style: bold;
}

h2 {
	font-family: Verdana;
	font-size: 16pt;
	color: #000099;
}

h3 {
	font-family: Verdana;
	font-size: 12pt;
	color: #000099;
}

h4 {
	font-family: Verdana;
	font-size: 8pt;
	color: #000099;
}

p {
	font-family: Verdana;
	font-size: 10pt;
	color: #000000;
}


b {
	font-family: Verdana;
	font-size: 10pt;
	font-weight: bold;
	color: #000099;
}

i{
	font-family: Verdana;
	font-size: 10pt;
	color: #000099;
	font-style: italic;
}
							
table { 
	font-family: Verdana, sans-serif; 
	border-collapse: collapse; 
	width: 60%; 
}

td, th { 
	border: 1px solid #dddddd; 
	text-align: left; 
	padding: 4px; 
}

tr:hover {
	background-color:#f5f5f5;
}

